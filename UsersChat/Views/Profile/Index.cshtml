@model EditProfileViewModel
@{
    ViewData["Title"] = "Index";
    ViewData["Text"] = "Profil Bilgileri";
    Layout = "~/Views/Message/Index.cshtml";

}

<div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Profili Düzenle</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                  <div class="form-group">
                    <label >Ad</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name">
                  </div>
                <div class="form-group">
                    <label>Soyad</label>
                    <input type="text" class="form-control" name="Surname" value="@Model.Surname">
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control" name="UserName" value="@Model.UserName">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="Email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label>Görsel</label>
                    <img src="~/UserImage/@Model.ImageUrl" style="width:100px; height:100px;"/>
                </div>
                  <div class="form-group">
                    <label for="exampleInputFile">Görsel Seç</label>
                    <div class="input-group">
                      <div class="custom-file">
                        <input type="file" asp-for="@Model.Image" class="custom-file-input" >
                        <label class="custom-file-label">Seç</label>
                      </div>                      
                    </div>
                  </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="text" class="form-control" name="Password" value="@Model.Password">
                </div>
                <div class="form-group">
                    <label>Şifre Tekrar</label>
                    <input type="text" class="form-control" name="ConfirmPassword" value="@Model.Password">
                </div>
                </div>
            
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
              </form>
            </div>     
          </div>