@model SendMessageViewModel
@{
	ViewData["Title"] = "Index";
	ViewData["Text"] = "Mesaj Gönder";
	Layout = "~/Views/Message/Index.cshtml";
}
<div class="col-md-12 p-3">
    <form method="post">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Yeni Mesaj Gönder</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div class="form-group">
                <input class="form-control" name="ToUser" placeholder="Kime:">
            </div>
            <div class="form-group">
                <input class="form-control" name="Subject" placeholder="Konu:">
            </div>
            <div class="form-group">
                <textarea id="compose-textarea" name="Message" class="form-control" placeholder="Mesaj:" style="height: 300px;"></textarea>
            </div>
            
        </div>
        <div class="card-footer">
            <div class="float-right">
                <button type="submit" formaction="/Compose/SaveDraft" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                    <button type="submit" class="btn btn-primary" formaction="/Compose/Index"><i class="far fa-envelope"></i> Gönder</button>
            </div>
            <a href="/Inbox/Index" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</a>
        </div>
    </div>
    </form>
</div>
